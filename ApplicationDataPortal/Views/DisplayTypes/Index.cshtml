@using ApplicationDataPortal.Models
<!--model List<ApplicationDataPortal.Models.DisplayTypes>-->

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> Display Type Manager </h1>

<div style="padding-bottom: 20px;">
    @Html.ActionLink("Add", "New", "DisplayTypes", new { @class ="btn btn-primary"})
</div>

<table id="displayTypes" style="width: 100%" class="table table-striped table-hover ">
    <thead>
    <tr>
        <th> Display Type </th>
        <th> Customer </th>
    </tr>
    </thead>
    <tbody></tbody>
</table>


@section scripts
{
    <script>
        $(document).ready(function() {
            $("#displayTypes").DataTable({
                    ajax: {
                        url: "/api/DisplayTypes",
                        dataSrc: ""
                },
                    columns: [
                        {
                            data: "description"
                        }, {
                            data: "customer.name"
                        }
                    ]
                });
        });
    </script>
}
